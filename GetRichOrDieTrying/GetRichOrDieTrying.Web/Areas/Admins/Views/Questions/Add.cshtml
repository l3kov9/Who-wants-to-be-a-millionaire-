@model AddQuestionViewModel
@{
    ViewData["Title"] = "Add";
}

<h2>Add question</h2>

<div class="row">
    <div class="col-md-4">
        <section>
            <form asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
                <hr />
                <div class="form-group">
                    <label asp-for="Text"></label>
                    <input asp-for="Text" class="form-control" />
                    <span asp-validation-for="Text" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CorrectAnswer"></label>
                    <input asp-for="CorrectAnswer" class="form-control" />
                    <span asp-validation-for="CorrectAnswer" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="FirstWrongAnswer"></label>
                    <input asp-for="FirstWrongAnswer" class="form-control" />
                    <span asp-validation-for="FirstWrongAnswer" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SecondWrongAnswer"></label>
                    <input asp-for="SecondWrongAnswer" class="form-control" />
                    <span asp-validation-for="SecondWrongAnswer" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ThirdWrongAnswer"></label>
                    <input asp-for="ThirdWrongAnswer" class="form-control" />
                    <span asp-validation-for="ThirdWrongAnswer" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="QuestionNumber"></label>
                    <input asp-for="QuestionNumber" class="form-control" />
                    <span asp-validation-for="QuestionNumber" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-success">Save question</button>
                </div>

            </form>
        </section>
    </div>
</div>
